{
  "name": "@osmn-byhn/css-formatter",
  "version": "1.0.1",
  "type": "module",
  "description": "Format CSS with smart selectors",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepublishOnly": "pnpm build && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "css",
    "inline",
    "html",
    "email",
    "styles",
    "converter",
    "reverse",
    "extract",
    "responsive",
    "media-queries"
  ],
  "author": "Osman Beyhan",
  "repository": {
    "type": "git",
    "url": "https://github.com/osmn-byhn/css-formatter"
  },
  "bugs": {
    "url": "https://github.com/osmn-byhn/css-formatter/issues"
  },
  "homepage": "https://css-formatter.osmanbeyhan.com",
  "license": "MIT",
  "dependencies": {
    "css-tree": "^3.1.0",
    "dom-serializer": "^2.0.0",
    "htmlparser2": "^10.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "domhandler": "^5.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}